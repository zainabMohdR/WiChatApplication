<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/pad_10dp"
        android:text="Ahmed: Hello, Jawad"
        android:textColor="@color/main_color_gray_dk"
        android:textSize="@dimen/txt_18sp"
        android:drawablePadding="@dimen/pad_10dp"
        android:id="@+id/chatItem1"
        android:background="@color/gray_light" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/pad_10dp"
        android:text="Ahmed: Do you know the answer of Q2 ?"
        android:textColor="@color/main_color_gray_dk"
        android:textSize="@dimen/txt_18sp"
        android:drawablePadding="@dimen/pad_10dp"
        android:id="@+id/chatItem2"
        android:background="@color/gray_light" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/pad_10dp"
        android:text="Me: Hello Ahmed."
        android:textColor="@color/main_color_green"
        android:textSize="@dimen/txt_18sp"
        android:drawablePadding="@dimen/pad_10dp"
        android:id="@+id/chatItem3"
        android:background="@color/white" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/pad_10dp"
        android:text="Me: of course"
        android:textColor="@color/main_color_green"
        android:textSize="@dimen/txt_18sp"
        android:drawablePadding="@dimen/pad_10dp"
        android:id="@+id/chatItem4" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/pad_10dp"
        android:text="Me: it is B"
        android:textColor="@color/main_color_green"
        android:textSize="@dimen/txt_18sp"
        android:drawablePadding="@dimen/pad_10dp"
        android:id="@+id/chatItem5"
        android:background="@color/white" />

</LinearLayout>